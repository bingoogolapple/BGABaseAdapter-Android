<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.bingoogolapple.androidcommon.adapter.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListViewDemoActivity"
            android:label="ListView示例" />
        <activity
            android:name=".activity.GridViewDemoActivity"
            android:label="GridView示例" />
        <activity
            android:name=".activity.RecyclerViewDemoActivity"
            android:label="RecyclerView示例" />
    </application>

</manifest>